/** QScrollBar **/

QScrollBar:vertical {
    background: #ccc;
    width: 20px;
    margin: 0;
    border: 1px solid #eee;
    border-radius: 8px;
}

QScrollBar::handle:vertical {
    background: #557;
    min-height: 6px;
    margin: 0;
    border-radius: 8px;
}

QScrollBar::add-line:vertical {
    height: 0;
}

QScrollBar::sub-line:vertical {
    height: 0;
}

QScrollBar::up-arrow:vertical,
QScrollBar::down-arrow:vertical {
    border: 0;
    width: 0;
    height: 0;
    background: none;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {
    background: #ccc;
    height: 20px;
    margin: 0;
    border: 1px solid #eee;
    border-radius: 8px;
}

QScrollBar::handle:horizontal {
    background: #557;
    min-height: 20px;
    margin: 0;
    border-radius: 8px;
}

QScrollBar::add-line:horizontal {
    width: 0;
}

QScrollBar::sub-line:horizontal {
    width: 0;
}

QScrollBar::up-arrow:horizontal,
QScrollBar::down-arrow:horizontal {
    border: 0;
    width: 0;
    height: 0;
    background: none;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: none;
}

/** QTableView **/

QTableView {
    border: 0;
    border-radius: 2px;
    background: #95a5a6;
    color: #eee;
    alternate-background-color: rgb(233, 237, 245);
    selection-background-color: darkgray;
    gridline-color: rgba(64, 64, 64, 100);
    outline: none;
}

QTableView::item {
    background: #34495e;
    padding-left: 2px;
    padding-right: 2px;
    outline: none;
}

QTableView::item:hover {
    background: #3c4e60;
}

QTableView::item:focus {
    border: 1px solid #5a5e99;
    outline: none;
}

QTableView::item:selected,
QTableView::item:selected:!focus {
    background: #2c3e50;
    color: #95a5a6;
}

/** QTreeView **/

QTreeView {
    border: 0;
    border-radius: 2px;
    background: #95a5a6;
    color: white;
    alternate-background-color: rgb(233, 237, 245);
    selection-background-color: darkgray;
    gridline-color: rgba(64, 64, 64, 100);
    outline: none;
}

QTreeView::item {
    background: #34495e;
    border: 1px solid rgba(64, 64, 64, 100);
    padding-left: 2px;
    padding-left: 2px;
    height: 25px;
    outline: none;
}

QTreeView::item:hover {
    background: #3c4e60;
}

QTreeView::item:focus {
    border: 1px solid #5a5e99;
    outline: none;
}

QTreeView::item:selected,
QTreeView::item:selected:!focus {
    background: #2d3f55;
    color: #95a5a6;
}

/** QHeaderView **/

QHeaderView {
    margin-top: 0;
    border: 0;
    background: #34495e;
    color: white;
    outline: none;
}

QHeaderView::section {
    border-bottom: 0;
    border-top: 1px solid #555;
    border-right: 1px solid #555;
    background: #2a3a48;
    padding: 8px;
}

QHeaderView::section:hover {
    background: #3a3a48;
    outline: none;
    color: #ccc;
}

QHeaderView::section:checked {
    background: #2a3a48;
    outline: none;
    color: #95a5a6;
}

/** QTabWidget **/

QTabWidget::pane {
    border: 2px solid #777;
    border-top-left-radius: 0.3em;
    border-top-right-radius: 0.3em;
    position: absolute;
    top: -0.0em;
}

QTabWidget::tab-bar {
    alignment: center;
}

QTabBar::tab {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop: 0#bbb, stop: 0.4#ccc, stop: 0.6#ddd, stop: 1#fff);
    border: 1px solid #aacc77;
    border-bottom-width: 0;
    border-top-left-radius: 0.3em;
    border-top-right-radius: 0.3em;
    margin-top: 1px;
    margin-right: 0.05em;
    padding-left: 1.0em;
    padding-right: 1.0em;
    padding-top: 0.1em;
    padding-bottom: 0.1em;
    color: #222;
}

QTabBar::tab:hover {
    border: 2px solid #ccc;
    border-bottom-width: 0;
}

QTabBar::tab:selected {
    border: 1px solid #999;
    border-bottom-width: 0;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop: 0#555, stop: 1#666);
    color: #eee;
}
