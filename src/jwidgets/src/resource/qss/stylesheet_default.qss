
/** QPushButton **/

QPushButton { 
    border-radius: 5px; 
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop: 0#999, stop: 0.4#666,
        stop: 0.6#777, stop: 1#999);
    color: #dbdbdb;
    padding-left: 0.6em;
    padding-right: 0.6em;
    padding-top: 0.2em;
    padding-bottom: 0.2em;
    outline: none;
}

QPushButton:hover {
    background: #8e44ad;
}
 
QPushButton:pressed {
    background: #0d5c91;
}

QPushButton:disabled {
    background: #9dc3c7;
}

/* CentralWidget */

QMainWindow {
    background: #333;
    color: #dbdbdb;
}
  
/* QLabel */

QLabel {
    color: #dbdbdb;
}
 
/* QGroupBox */

QGroupBox {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop: 0#444, stop: 1#555);
    border: 2px solid #556;
    border-radius: 0.2em;
    margin-top: 0.8em;
    color: #ddd;
} 

QGroupBox::title {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop: 0#555, stop: 1#666);
    border-radius: 5px;
    border: 1px solid #777;
    subcontrol-origin: margin;
    subcontrol-position: top center;
    left: 0.5em;
    padding-left: 50px;
    padding-right: 50px;
    padding-top: 3px;
    padding-bottom: 3px;
    top: 0;
}

/* QCheckBox */

QCheckBox {
    color: #dbdbdb;
}

/* QProgressBar */

QProgressBar {
    background: #e0e0e0;
    border: 1px solid #eee;
    border-radius: 2px;
    text-align: center;
    color: darkblue;
}

QProgressBar::chunk {
    background: #aac;
    border-radius: 0px;
    width: 3px;
    margin-left: 0.5px;
} 

/* QStatusBar */
 
QStatusBar {
    background: #0075c3;
}

QStatusBar QLabel {
    color: #e0e0e0;
}

/** QComboBox, QSpinBox, QDoubleSpinBox **/

QComboBox,QSpinBox,QDoubleSpinBox,
QTimeEdit,QDateEdit,QDateTimeEdit {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop: 0#555, stop: 1#3b3b3b);
    border-radius: 5px;
    border: 2px solid #555;
    color: #ddd;
    padding-left: 0.2em;
    padding-top: 0.15em;
    padding-bottom: 0.15em;
    outline: none;
}

QComboBox:hover,QSpinBox:hover,QDoubleSpinBox:hover,
QTimeEdit:hover,QDateEdit:hover,QDateTimeEdit:hover {
    border: 1px solid #205375;
}

QComboBox::down-arrow {
    image: url(:/com.smartsoft.jsmartkits/jwidgets/image/default/controls/arrow/arrow_down.png);
}

QComboBox::drop-down,QSpinBox::drop-down,QDoubleSpinBox::drop-down,
QTimeEdit::drop-down,QDateEdit::drop-down,QDateTimeEdit::drop-down {
    width: 14px;
    border-left: 1px solid rgba(128, 128, 128, 70);
    background: transparent;
}

QComboBox::drop-down:hover,QSpinBox::drop-down:hover,QDoubleSpinBox::drop-down:hover,
QTimeEdit::drop-down:hover,QDateEdit::drop-down:hover,QDateTimeEdit::drop-down:hover {
    border-left: 1px solid lightgray;
    background: rgb(220, 240, 250);
}

/** QComboBox QListView **/

QComboBox QListView {
    border: 2px solid #5a5a5a;
    background: #252526; 
    color: #bbb;
    padding-left: 5px;
    outline: none;
}

QComboBox QListView::item {
    height: 50px;
}

QComboBox QListView::item:hover {
    background: #2a2d2e;
}

QComboBox QListView::item:selected {
    background: #073655;
}

/** QLineEdit **/

QLineEdit {
    background: #444;
    border-radius: 2px;
    border: 1px solid #2d2d50;
    color: #ccc;
    padding: 5px;
    outline: none;
}

QLineEdit:read-only {
    background: #3c3c3c;
}

QLineEdit:hover {
    border: 1px solid #205375;
    color: #dbdbdb;
} 

QLineEdit:focus {
    border: 1px solid #205375;
    border-radius: 2px;
    background: #666;
}

/* QSplitter */

/** QListView **/

QListView {
    border-radius: 3px;
    background: #95a5a6;
    color: white;
    outline: none;
    font: 15px "Microsoft Yahei";
}

QListView::item {
    background: #34495e;
    border-top: 1px solid #2c3e50;
    height: 40px;
    padding-left: 5px;
}

QListView::item:hover {
    background: #3c4e60;
}

QListView::item:focus {
    border: 1px solid #8a7eb9;
    outline: none;
}

QListView::item:alternate {
    background: #2c3e50;
}

QListView::item:selected {
    background: #2d3f55;
}

QListView::item:selected:!active {

}

